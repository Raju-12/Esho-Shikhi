<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/englishbac"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.raju.mainproject.EnglishLearn"
    tools:showIn="@layout/activity_english_learn">


    <LinearLayout
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="vertical">
        <android.support.v7.widget.CardView
            android:id="@+id/alphabet"
            android:onClick="alphabet"
            android:layout_width="250dp"
            android:layout_height="120dp"
            android:layout_margin="10dp"
            android:layout_marginLeft="10dp"
            android:clickable="true"
            app:cardBackgroundColor="#698329"
            android:foreground="?android:attr/selectableItemBackground"
            app:cardCornerRadius="60dp">
            <ImageView
                android:layout_width="200dp"
                android:layout_height="120dp"
                android:layout_marginLeft="10dp"
                android:padding="10dp"
                android:src="@drawable/alpha" />
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/number"
            android:layout_width="250dp"
            android:layout_height="100dp"
            app:cardBackgroundColor="#698329"
            android:layout_margin="10dp"
            android:layout_marginLeft="10dp"
            android:clickable="true"
            android:foreground="?android:attr/selectableItemBackground"
            app:cardCornerRadius="60dp">
            <ImageView
                android:layout_width="200dp"
                android:layout_height="100dp"
                android:layout_marginLeft="10dp"
                android:padding="10dp"
                android:src="@drawable/number" />
        </android.support.v7.widget.CardView>



        <android.support.v7.widget.CardView
            android:id="@+id/viowel"
            android:layout_width="250dp"
            android:layout_height="100dp"
            app:cardBackgroundColor="#698329"
            android:layout_margin="10dp"
            android:layout_marginLeft="10dp"
            android:clickable="true"
            android:foreground="?android:attr/selectableItemBackground"
            app:cardCornerRadius="60dp">
            <ImageView
                android:layout_width="200dp"
                android:layout_height="120dp"
                android:layout_marginLeft="10dp"
                android:padding="10dp"
                android:src="@drawable/viowel" />
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/learnimage"
            android:layout_width="250dp"
            android:onClick="learnimage"
            android:layout_height="100dp"
            app:cardBackgroundColor="#698329"
            android:layout_margin="10dp"
            android:layout_marginLeft="10dp"
            android:clickable="true"
            android:foreground="?android:attr/selectableItemBackground"
            app:cardCornerRadius="60dp">
            <ImageView
                android:id="@+id/imagelearn"
                android:layout_width="200dp"
                android:layout_height="120dp"
                android:layout_marginLeft="10dp"
                android:padding="10dp"
                android:src="@drawable/viowel" />

        </android.support.v7.widget.CardView>



    </LinearLayout>

</ScrollView>
